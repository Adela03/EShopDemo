@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}


<div class="contacto1">
<div class="container-fluid">
<div class="row"> 
  <div class="ejeZcontacto1">
  <div class="contacto1-content">
        <div class="contacto1-title"><h2>@ViewData["Title"]</h2><hr></div>
        <div class="formulario-content">
                <center>
                <form id="formulario" id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input id="email" asp-for="Input.Email" class="form-control" placeholder="Ingresa tu correo electronico"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input id="user" asp-for="Input.Password" class="form-control" placeholder="Ingresa tu contraseña"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="send">Ingresar</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                        </p>
                    </div>
                </form>
                </center>
                <hr />
                <p>O ingresa con:</p>
                <div class="row text-center">
                    <div class="col-4"><a href="#"><img src="/imagenes/facebook.png" alt="facebook" height="30px" width="30px"></a></div>
                    <div class="col-4"><a href="#"><img src="/imagenes/instagram.png" alt="instagram" height="30px" width="30px"></a></div>
                    <div class="col-4"><a href="#"><img src="/imagenes/google.png" alt="google" height="30px" width="30px"></a></div>
                </div>
            </div>
    </div>
    </div>
</div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
