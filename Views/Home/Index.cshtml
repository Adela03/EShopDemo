

@model dynamic

@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/img/banner_01.jpg" class="d-block w-100" alt="..." style="width: 500px; height:500px">
    </div>
    <div class="carousel-item">
       <img src="~/img/banner_01.jpg" class="d-block w-100" alt="..." style="width: 500px; height:500px">
    </div>
    <div class="carousel-item">
       <img src="~/img/banner_01.jpg" class="d-block w-100" alt="..." style="width: 500px; height:500px">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
    <div style="margin-bottom: 2vw;">
        <h3>Categorias</h3>
            <div class="main-carousel" data-flickity='{"groupCells": true, "cellAlign": "left", "contain": true }'>
                @foreach (Categoria categoria in Model.Cat)
                {
                        <div class="carousel-cell col-sm-6">
                            <form method="GET" action="Categoria" id="@categoria.Name"> 
                                <input type="hidden" value="@categoria.ID" id="valor" asp-for="@categoria.ID">  
                                <a href="javascript:{}" onclick="document.getElementById('@categoria.Name').submit();">
                                    <div class="card bg-dark text-white">
                                        <img class="card-img" src="@categoria.imageData" alt="@categoria.Name">
                                        <div class="card-img-overlay">
                                            <h5 class="card-title">@categoria.Name</h5>
                                        </div>
                                    </div>
                                </a>
                            </form>
                        </div>
                }
            </div>
        
    </div>
    <div style="margin-bottom: 2vw;">
        <h3>Recomendaciones</h3>
        <div class="main-carousel" data-flickity='{"groupCells": true, "cellAlign": "left", "contain": true }'>
                @foreach (Producto producto in Model.Productos)
                {
                        <div class="carousel-cell col-md-6">
                            <form method="GET" action="Detalle" id="@producto.Name"> 
                                <input type="hidden" value="@producto.ID" id="valor" asp-for="@producto.ID">  
                                <a href="javascript:{}" onclick="document.getElementById('@producto.Name').submit();">
                                    <div class="card bg-dark text-white">
                                        <img class="card-img" src="@producto.imageData" alt="@producto.Name">
                                        <div class="card-img-overlay">
                                            <h5 class="card-title">@producto.Name</h5>
                                        </div>
                                    </div>
                                </a>
                            </form>
                        </div>
                }
        </div>
    </div>
</div>